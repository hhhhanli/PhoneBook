<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_marginTop="50dp"
            android:background="#2CA2C0">

        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginTop="500dp"
            android:background="#2CA2C0">

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="435dp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="320dp"
            android:background="#2CA2C0">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="435dp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="1dp"
            android:background="#2CA2C0">

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear"
            android:gravity="center">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/from_time"
                android:hint="请输入日期"
                android:gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:focusable="false"
                android:theme="@style/MyEditText"
                android:focusableInTouchMode="true"
                android:layout_below="@+id/relativeLayout"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/to"
                android:text="至"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_toRightOf="@id/from_time"
                android:layout_alignTop="@id/from_time"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/to_time"
                android:hint="请输入日期"
                android:gravity="center"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:textColorHighlight="@color/white"
                android:layout_toRightOf="@+id/to"
                android:theme="@style/MyEditText"
                android:layout_alignTop="@id/from_time"
                android:focusable="false"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:theme="@style/MyEditText"
            android:layout_marginTop="45dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dail_count"
                android:text="通话次数:  "
                android:textSize="20dp"
                android:textColor="#2CA2C0"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count_value"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/gray"
                android:layout_toRightOf="@id/dail_count"
                android:layout_alignTop="@id/dail_count"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dail_time"
                android:text="通话时长:  "
                android:textSize="20dp"
                android:textColor="#2CA2C0"
                android:layout_below="@id/dail_count"
                android:layout_alignLeft="@id/dail_count"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_value"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/gray"
                android:layout_toRightOf="@id/dail_time"
                android:layout_alignTop="@id/dail_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/max_count_name"
                android:text="通话最多用户:  "
                android:textSize="20dp"
                android:textColor="#2CA2C0"
                android:layout_below="@id/dail_time"
                android:layout_alignLeft="@id/dail_count"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name1"
                android:text="无"
                android:textSize="20dp"
                android:textColor="@color/gray"
                android:layout_toRightOf="@id/max_count_name"
                android:layout_alignTop="@id/max_count_name"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/max_count"
                android:text="与该用户通话次数:  "
                android:textSize="20dp"
                android:textColor="#2CA2C0"
                android:layout_below="@id/max_count_name"
                android:layout_alignLeft="@id/dail_count"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/max_value1"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/gray"
                android:layout_toRightOf="@id/max_count"
                android:layout_alignTop="@id/max_count"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/max_length_name"
                android:text="通话最久用户:  "
                android:textSize="20dp"
                android:textColor="#2CA2C0"
                android:layout_below="@id/max_count"
                android:layout_alignLeft="@id/dail_count"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name2"
                android:text="无"
                android:textSize="20dp"
                android:textColor="@color/gray"
                android:layout_toRightOf="@id/max_length_name"
                android:layout_alignTop="@id/max_length_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/max_length"
                android:text="与该用户通话时长:  "
                android:textSize="20dp"
                android:textColor="#2CA2C0"
                android:layout_below="@id/max_length_name"
                android:layout_alignLeft="@id/dail_count"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/max_value2"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/gray"
                android:layout_toRightOf="@id/max_length"
                android:layout_alignTop="@id/max_length"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/zhexian"
                    android:text="折线统计图"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:background="#2CA2C0" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/shanxing"
                    android:text="扇形统计图"
                    android:background="#2CA2C0"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@id/zhexian"
                    android:layout_alignTop="@id/zhexian"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>