<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <TextView
            android:id="@+id/txt_return3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:textColor="@color/blue"
            android:textSize="18dp"
            android:text="返回" />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="25dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="15dp"
            android:id="@+id/my_menu"
            android:background="@drawable/sheng"
            android:onClick="show"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img_show_photo3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/telephone"
            android:layout_weight="0.06" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/txt_show_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:enabled="false"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp"
                    android:text="电话号码:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/txt_show_phone3"
                    android:layout_marginLeft="25dp"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:enabled="false"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp"
                    android:text="电子邮箱:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/txt_show_email3"
                    android:layout_marginLeft="25dp"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:enabled="false"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp"
                    android:text="联系人地址:" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <EditText
                    android:id="@+id/txt_show_address3"
                    android:layout_marginLeft="25dp"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:enabled="false"
                    android:textColor="@color/black"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/online_vioce"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/blue"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp"
                    android:text="拨打网络电话"
                    />
                <View
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#33000000" />

                <TextView
                    android:id="@+id/show_QR_code"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/blue"
                    android:layout_marginLeft="25dp"
                    android:textSize="15dp"
                    android:text="二维码名片"
                    />
                <View
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#33000000" />

                <!--<TextView-->
                <!--android:id="@+id/send_desk3"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:text="发送到桌面"-->
                <!--/>-->
            </LinearLayout>
            <TextView

                android:id="@+id/callPhone"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="25dp"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:text="拨打电话"></TextView>
            <View
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_width="325dp"
                android:layout_height="0.5dp"
                android:background="#33000000" />
            <TextView
                android:id="@+id/edit_contact3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:text="编辑联系人"
                />
            <View
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_width="325dp"
                android:layout_height="0.5dp"
                android:background="#33000000" />
            <TextView
                android:id="@+id/delete_contact3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:text="删除联系人"
                />
            <View
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_width="325dp"
                android:layout_height="0.5dp"
                android:background="#33000000" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>