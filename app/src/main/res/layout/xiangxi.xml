<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <TextView
            android:id="@+id/txt_return3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:textColor="@color/blue"
            android:textSize="18dp"
            android:text="返回" />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="25dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="15dp"
            android:id="@+id/my_menu"
            android:background="@drawable/sheng"
            android:onClick="show"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/img_show_photo3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/telephone"
            android:layout_weight="0.06" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/txt_show_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:enabled="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3.0">


        <TextView
            android:id="@+id/pe_item_one"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="17dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#2CA2C0"
            android:textColor="@color/white"
            android:text="详情" />

        <TextView
            android:id="@+id/pe_item_two"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="17dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#2CA2C0"
            android:textColor="@color/white"
            android:text="通话记录" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/peViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>